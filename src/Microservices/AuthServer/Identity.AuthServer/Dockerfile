FROM microsoft/aspnetcore:2.0-nanoserver-1709 AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/aspnetcore-build:2.0-nanoserver-1709 AS build
WORKDIR /src
COPY *.sln ./
COPY src/Microservices/AuthServer/Identity.AuthServer/Identity.AuthServer.csproj src/Microservices/AuthServer/Identity.AuthServer/
RUN dotnet restore
COPY . .
WORKDIR /src/src/Microservices/AuthServer/Identity.AuthServer
RUN dotnet build -c Release -o /app

FROM build AS publish
RUN dotnet publish -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Identity.AuthServer.dll"]
